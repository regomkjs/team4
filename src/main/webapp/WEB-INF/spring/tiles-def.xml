<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
	<!-- 팝업 레이아웃 -->
	<definition name="/popup/*/*" template="/WEB-INF/views/layout/popupLayout.jsp">
        <put-attribute name="body" value="/WEB-INF/views/popup/{1}/{2}.jsp" />
    </definition>
 	<!-- 도서관 레이아웃 -->
  	<definition name="/library/book/*" template="/WEB-INF/views/layout/libraryLayout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/common/libraryHeader.jsp" />   
        <put-attribute name="footer" value="/WEB-INF/views/common/libraryFooter.jsp" />
        <put-attribute name="body" value="/WEB-INF/views/library/book/{1}.jsp" />
    </definition>
 	<!-- 도서판매 레이아웃 -->
  	<definition name="/library/sale/*" template="/WEB-INF/views/layout/bookSaleLayout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/common/bookSaleHeader.jsp" />   
        <put-attribute name="footer" value="/WEB-INF/views/common/libraryFooter.jsp" />
        <put-attribute name="body" value="/WEB-INF/views/library/sale/{1}.jsp" />
    </definition>
     <!--레이아웃을 적용하는화면-->
    <definition name="/*/*" template="/WEB-INF/views/layout/baseLayout.jsp">
        <put-attribute name="header" value="/WEB-INF/views/common/header.jsp" />   
        <put-attribute name="footer" value="/WEB-INF/views/common/footer.jsp" />
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp" />
    </definition>
</tiles-definitions>